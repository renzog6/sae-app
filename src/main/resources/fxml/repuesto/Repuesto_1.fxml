<BorderPane fx:id="bpRepuesto" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ar.nex.repuesto.RepuestoController">
    
    <center>
        <AnchorPane>
            <children>
                <TableView fx:id="table" layoutX="-9.0" layoutY="14.0" onMouseClicked="#showOnClick" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="colEquipos" minWidth="50.0" prefWidth="100.0" text="Equipos" />
                        <TableColumn fx:id="colCodigo" minWidth="50.0" prefWidth="100.0" text="Codigo" />
                        <TableColumn fx:id="colDescripcion" prefWidth="102.0" text="Descripcion" />
                        <TableColumn fx:id="colParte" prefWidth="102.0" text="Parte" />
                        <TableColumn fx:id="colInfo" prefWidth="102.0" text="Info" />
                        <TableColumn fx:id="colMarca" prefWidth="100.0" text="Marca" />                        
                        <TableColumn fx:id="colStock" maxWidth="100.0" minWidth="80.0" prefWidth="100.0" text="Stock" />
                        <TableColumn fx:id="colAccion" maxWidth="100.0" minWidth="80.0" prefWidth="100.0" styleClass="colAccion" text="Accion" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </center>
    
    <top>          
        <AnchorPane minHeight="50.0" prefHeight="50.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="searchBox" layoutX="127.0" layoutY="13.0" onInputMethodTextChanged="#Search" onKeyReleased="#Search" prefHeight="30.0" prefWidth="200.0" promptText="Buscar" AnchorPane.rightAnchor="140.0" AnchorPane.topAnchor="10.0" />
            <Label layoutX="508.0" layoutY="12.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0" text="Lista de Repuestos" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <MenuButton mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Menu" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
               <items>
                  <MenuItem mnemonicParsing="false" text="Action 1" />
                  <MenuItem mnemonicParsing="false" text="Action 2" />
               </items>
            </MenuButton>
            </children>
        </AnchorPane>       
    </top>
    
   <bottom>
        <AnchorPane fx:id="menuPane" minHeight="160.0" prefHeight="160.0" styleClass="menuPane" BorderPane.alignment="CENTER">
            <children>
             
                <Button fx:id="btnAdd" contentDisplay="CENTER" layoutX="10.0" layoutY="210.0" mnemonicParsing="false" AnchorPane.bottomAnchor="110.0" AnchorPane.rightAnchor="10.0">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/plus_64.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>                        
                <Button fx:id="btnEdit" alignment="CENTER" contentDisplay="CENTER" layoutX="77.0" layoutY="210.0" mnemonicParsing="false" AnchorPane.bottomAnchor="60.0" AnchorPane.rightAnchor="10.0">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/pencil_64.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>                        
                <Button fx:id="btnDelete" contentDisplay="CENTER" layoutX="110.0" layoutY="210.0" mnemonicParsing="false" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../img/delete_64.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <Button fx:id="btnAddModelo" minHeight="30.0" minWidth="85.0" mnemonicParsing="false" text="+ Equipos" AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="20.0" />
            <Button fx:id="btnAddProvedor" minHeight="30.0" minWidth="85.0" mnemonicParsing="false" text="+ Proveedor" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="20.0" />
            <Button fx:id="btnAddMarca" minHeight="30.0" minWidth="85.0" mnemonicParsing="false" text="+ Marcas" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" />
            
            <Label fx:id="lblModelo" layoutX="14.0" layoutY="21.0" AnchorPane.bottomAnchor="125.0" AnchorPane.leftAnchor="130.0">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <Label fx:id="lblPedido" layoutX="14.0" layoutY="44.0" AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="130.0">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <Label fx:id="lblCompra" text="Ultima compra:" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="130.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
                 
            </children>
        </AnchorPane>
   </bottom>
   
</BorderPane>
